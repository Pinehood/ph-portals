{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@root/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@portals/*": ["src/modules/portals/*"],
      "@resources/*": ["src/resources/*"],
      "@scrapers/*": ["src/modules/scrapers/*"],
      "@utils/*": ["src/modules/utils/*"]
    }
  },
  "include": ["src/**/*"]
}
